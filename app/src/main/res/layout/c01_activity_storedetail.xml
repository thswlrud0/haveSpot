<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="12"
    android:orientation="vertical"
    tools:context="net.daum.www.havespot.views.activity.C01_StoreDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <ImageView
            android:id="@+id/img_store_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Strike 500"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_store_addr"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:text="수지구 죽전로 168번길"
                    android:textSize="15dp"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/text_store_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="5 PM ~ 2 AM"
                    android:textSize="15dp"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/text_store_like"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="♥ 183"
                    android:textSize="15dp"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

            <TextView
                android:id="@+id/text_store_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="☎ 031-265-0892"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/text_store_intro"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Strike 500은 펍과 볼링장이 합쳐진 Fusion Pub 입니다."
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:weightSum="17"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_marginVertical="5dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:text="결제하기"
        android:textSize="15sp"/>

</LinearLayout>
